    behaviors {
        td_ins_esc: tap_dance_ins_esc {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_INS_ESC";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp INSERT>, <&kp ESCAPE>;
        };

        td_1_f1: tap_dance_1_f1 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_1_F1";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp N1>, <&kp F1>;
        };
        
        td_2_f2: tap_dance_2_f2 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_2_F2";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp N2>, <&kp F2>;
        };
        
        td_3_f3: tap_dance_3_f3 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_3_F3";
            #binding-cells = <0>;
